                    $labelIdClass = 'label-success';
                } else {
                    $labelIdClass = 'label-warning';
                } ?>
                <tr>
                    <td>
                        <span class="label <?php echo $labelIdClass; ?>">
                            <?php echo $this->escape($type['id']); ?>
                        </span>
                    </td>
                    <td><?php echo $this->escape($type['title']); ?></td>
                    <td><?php echo $this->escape($type['view_order']); ?></td>
                    <td>
                        <a class="btn btn-primary btn-sm" title="<?php _e('Edit'); ?>"
                           href="<?php echo $this->url('', ['action' => 'update', 'id' => $type['id']]); ?>"><i
                                    class="fa fa-edit"></i> <?php _e('Edit'); ?></a>
                        <a class="btn btn-success btn-sm" title="<?php _e('View'); ?>"
                           href="<?php echo Pi::url(
                               $this->url(
                                   'portfolio', [
                                   'controller' => 'type',
                                   'action'     => 'index',
                                   'slug'       => $type['slug'],
                               ]
                               )
                           ); ?>"><i class="fa fa-eye"></i> <?php _e('View'); ?></a>
                    </td>
                </tr>
            <?php } ?>
        </table>
    <?php } else { ?>
        <div class="alert alert-danger" role="alert">
            <?php _e('No project type create yet'); ?>
        </div>
    <?php } ?>
</div>